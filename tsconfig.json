{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build/",
    "target": "es5",                          
    "module": "commonjs",                     
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["**/src/**/*"],
  "exclude": ["node_modules"]
}
